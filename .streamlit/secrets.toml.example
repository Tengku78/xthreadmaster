# Copy this file to secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to git!

# Gemini AI API Key (required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY = "your-gemini-api-key-here"

# Stripe Configuration (required for Pro features)
# Get from: https://dashboard.stripe.com/
STRIPE_SECRET_KEY = "sk_test_or_sk_live_your_stripe_secret_key"
STRIPE_PAYMENT_LINK = "https://buy.stripe.com/your-payment-link"

# X/Twitter OAuth Credentials (required for auto-posting)
# Get from: https://developer.twitter.com/
X_CONSUMER_KEY = "your-x-consumer-key"
X_CONSUMER_SECRET = "your-x-consumer-secret"

# Stability AI API Key (required for Instagram carousel images)
# Get from: https://platform.stability.ai/
STABILITY_API_KEY = "sk-your-stability-api-key-here"
